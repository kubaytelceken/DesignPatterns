@using RepositoryDesignPattern.Entitites.Concrete;
@model Product

<div class="container">
    <form method="post">
        <input type="hidden" asp-for="ProductId" />
        <label>Product Name</label>
        <input type="text" asp-for="ProductName" class="form-control"/>
        <br />
        <label>Product Price</label>
        <input type="number" asp-for="ProductPrice" class="form-control" />
        <br />
         <label>Product Stock</label>
        <input type="number" asp-for="ProductStock" class="form-control"/>
        <br />
        <label>Category</label>
        @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.categoryList, new {@class = "form-control"})
        <br />
        <button class="btn btn-success">Update Product</button>
    </form>
</div>
